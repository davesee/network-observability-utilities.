{
	"name": "C# (.NET)",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"settings": {
		"dotnet-test-explorer.testProjectPath": "**/*Test*.@(csproj|vbproj|fsproj)",
		"omnisharp.defaultLaunchSolution": "NetworkObservabilityUtilities.sln",
		"omnisharp.organizeImportsOnFormat": true,
		"omnisharp.enableEditorConfigSupport": true,
		"omnisharp.enableRoslynAnalyzers": true,
		"files.eol": "\n",
		"editor.tabSize": 2,
		"editor.insertSpaces": false,
		"editor.detectIndentation": false,
		"[markdown]": {
			"editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
		},
		"editor.formatOnSave": true,
		"trailing-spaces.trimOnSave": true,
		"terminal.integrated.defaultProfile.linux": "bash"
	},
	"extensions": [
		"ms-dotnettools.csharp",
		"timonwong.shellcheck",
		"formulahendry.code-runner",
		"eamodio.gitlens",
		"streetsidesoftware.code-spell-checker",
		"yzhang.markdown-all-in-one",
		"vscode-icons-team.vscode-icons",
		"coenraads.bracket-pair-colorizer-2",
		"mikestead.dotenv",
		"shardulm94.trailing-spaces",
		"davidanson.vscode-markdownlint",
		"formulahendry.dotnet-test-explorer",
		"semasquare.vscode-coverage-gutters",
		"bierner.markdown-emoji",
		"tomoki1207.pdf",
		"bierner.markdown-mermaid",
		"editorconfig.editorconf"
	],
	"postCreateCommand": "bash git_hooks/setup.sh"
}